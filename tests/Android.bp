package {
    default_applicable_licenses: ["system_keymint_license"],
}

rust_defaults {
    name: "kmr_tests_defaults",
    edition: "2021",
    lints: "vendor",
    rustlibs: [
        "libciborium",
        "libenv_logger",
        "libhex",
        "libkmr_common",
        "libkmr_ta",
        "libkmr_wire",
        "liblazy_static",
        "liblog_rust",
        "libx509_cert"
    ],
    proc_macros: [
        "libkmr_derive",
    ],
    cfgs: [
        "soong",
    ],
}

rust_library_host {
    name: "libkmr_tests",
    crate_name: "kmr_tests",
    srcs: ["src/lib.rs"],
    vendor_available: true,
    defaults: [
        "kmr_tests_defaults",
    ],
}

